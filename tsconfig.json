{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "noEmit": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "app-source/*"
            ]
        },
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "app-source/**/*.vue",
        "app-source/**/*.ts",
        "shims-ts/*.d.ts"
    ]
}
